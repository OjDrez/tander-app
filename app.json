{
  "expo": {
    "name": "TanderApp",
    "slug": "TanderApp",
    "version": "1.0.0",
    "orientation": "portrait",

    "icon": "./src/assets/icon.png",

    "scheme": "tanderapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,

    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Tander needs access to your camera to scan your ID card for age verification."
      }
    },

    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "usesCleartextTraffic": true,
      "package": "com.tanderapp",
      "permissions": [
        "CAMERA"
      ]
    },

    "web": {
      "output": "static",
      "favicon": "./src/assets/icon.png"
    },

    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./src/assets/icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": { "backgroundColor": "#000000" }
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Tander needs access to your camera to scan your ID card for age verification."
        }
      ],
      "./plugins/withAndroidNetworkSecurityConfig.js"
    ],

    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
